#!/bin/bash

# System Environment Wrapper (stew) - Quick actions for environment management
# Usage: stew <category> <action> [options]

set -e

BIN_DIR="$HOME/dotfiles/bin"

category="$1"
action="$2"
shift 2 2>/dev/null || true

case "$category" in
    idle)
        "$BIN_DIR/stew-idle" "$action" "$@"
        ;;
    notify)
        "$BIN_DIR/stew-notify" "$action" "$@"
        ;;
    profile)
        "$BIN_DIR/stew-profile" "$action" "$@"
        ;;
    session)
        "$BIN_DIR/stew-session" "$action" "$@"
        ;;
    run)
        "$BIN_DIR/stew-run" "$action" "$@"
        ;;
    space)
        "$BIN_DIR/stew-space" "$action" "$@"
        ;;
    wall)
        "$BIN_DIR/stew-wall" "$action" "$@"
        ;;
    win)
        "$BIN_DIR/stew-win" "$action" "$@"
        ;;
    *)
        echo "System Environment Wrapper (stew)"
        echo ""
        echo "Usage: stew <command> <action> [options]"
        echo ""
        echo "Commands:"
        echo "  idle     Idle/sleep management"
        echo "  notify   Notification management"
        echo "  profile  Workspace/monitor profiles"
        echo "  run      Command runner"
        echo "  session  Lock/logout/sleep/restart/shutdown"
        echo "  wall     Wallpaper management"
        echo "  win      Window finder and management"
        echo ""
        exit 1
        ;;
esac
