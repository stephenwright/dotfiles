#!/bin/bash

# System Environment Wrapper (stew) - Quick actions for environment management
# Usage: stew <category> <action> [options]

set -e

category="$1"
action="$2"
shift 2 2>/dev/null || true

case "$category" in
    wall)
        ~/bin/stew-wall "$action" "$@"
        ;;
    space)
        ~/bin/stew-space "$action" "$@"
        ;;
    session)
        ~/bin/stew-session "$action" "$@"
        ;;
    win)
        ~/bin/stew-win "$action" "$@"
        ;;
    *)
        echo "System Environment Wrapper (stew)"
        echo ""
        echo "Usage: stew <command> <action> [options]"
        echo ""
        echo "Commands:"
        echo "  wall     Wallpaper management"
        echo "  space    Workspace/monitor profiles"
        echo "  session  Session management (lock/logout/sleep/restart/shutdown)"
        echo "  win      Window finder and management"
        echo ""
        echo "Examples:"
        echo "  stew wall next        # Next wallpaper"
        echo "  stew wall pick        # Interactive wallpaper picker"
        echo "  stew space work       # Switch to work profile"
        echo "  stew session pick     # Interactive session menu"
        echo "  stew win find         # Find and manage windows"
        exit 1
        ;;
esac
